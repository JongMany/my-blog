{
  "extends": "@srf/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "ES2019",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "examples"]
}
